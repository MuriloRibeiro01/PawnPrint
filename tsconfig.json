{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["esnext", "dom"],
    "strict": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": false,
    "skipLibCheck": true
  },
  "include": ["App.tsx", "src"],
  "exclude": ["node_modules", "hardware"]
}
